    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: compile:schema",
            "request": "launch",
            "command": "npm run compile:schema",
            "cwd": "${workspaceFolder}"
        }
    ]
}